<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#106EBE"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#464647"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFB900"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#D13438"/>
    <SolidColorBrush x:Key="HighPriorityBrush" Color="#FF6B6B"/>
    <SolidColorBrush x:Key="MediumPriorityBrush" Color="#FFD93D"/>
    <SolidColorBrush x:Key="LowPriorityBrush" Color="#6BCF7F"/>
    <SolidColorBrush x:Key="CompletedBrush" Color="#6C757D"/>

    <!-- Fonts -->
    <FontFamily x:Key="PrimaryFont">Segoe UI</FontFamily>
    <FontFamily x:Key="HeaderFont">Segoe UI Semibold</FontFamily>

    <!-- Font Sizes -->
    <sys:Double x:Key="HeaderFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">24</sys:Double>
    <sys:Double x:Key="SubHeaderFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">18</sys:Double>
    <sys:Double x:Key="BodyFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">14</sys:Double>
    <sys:Double x:Key="CaptionFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">12</sys:Double>

    <!-- Spacing -->
    <Thickness x:Key="DefaultMargin">8</Thickness>
    <Thickness x:Key="LargeMargin">16</Thickness>
    <Thickness x:Key="SmallMargin">4</Thickness>
    <Thickness x:Key="DefaultPadding">12</Thickness>
    <Thickness x:Key="LargePadding">20</Thickness>
    <Thickness x:Key="SmallPadding">6</Thickness>

    <!-- Corner Radius -->
    <CornerRadius x:Key="DefaultCornerRadius">6</CornerRadius>
    <CornerRadius x:Key="LargeCornerRadius">12</CornerRadius>

    <!-- Shadows -->
    <DropShadowEffect x:Key="DefaultShadow" 
                      Color="#80000000" 
                      Direction="270" 
                      ShadowDepth="2" 
                      BlurRadius="8" 
                      Opacity="0.5"/>

    <DropShadowEffect x:Key="HoverShadow" 
                      Color="#A0000000" 
                      Direction="270" 
                      ShadowDepth="4" 
                      BlurRadius="12" 
                      Opacity="0.6"/>

</ResourceDictionary>
