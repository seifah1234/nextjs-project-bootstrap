<Window x:Class="TodoApp.Views.NewTodoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add New Todo" 
        Height="500" 
        Width="450"
        MinHeight="450"
        MinWidth="400"
        Background="{DynamicResource PrimaryBackgroundBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid Margin="{DynamicResource LargePadding}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <Label Content="ðŸ“" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Label x:Name="HeaderLabel" Content="Add New Todo" Style="{StaticResource SubHeaderLabelStyle}" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Title -->
                <Label Content="Title *" Style="{StaticResource ModernLabelStyle}" FontWeight="SemiBold"/>
                <TextBox x:Name="TitleTextBox" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         MaxLength="100"
                         Margin="0,0,0,15"/>
                <TextBlock x:Name="TitleError" 
                           Foreground="{DynamicResource DangerBrush}" 
                           FontSize="12" 
                           Margin="0,-10,0,10"
                           Visibility="Collapsed"/>

                <!-- Description -->
                <Label Content="Description" Style="{StaticResource ModernLabelStyle}" FontWeight="SemiBold"/>
                <TextBox x:Name="DescriptionTextBox" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="80"
                         MaxLength="500"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,15"/>

                <!-- Due Date -->
                <Label Content="Due Date *" Style="{StaticResource ModernLabelStyle}" FontWeight="SemiBold"/>
                <DatePicker x:Name="DueDatePicker" 
                            Style="{StaticResource ModernDatePickerStyle}"
                            Margin="0,0,0,15"/>
                <TextBlock x:Name="DueDateError" 
                           Foreground="{DynamicResource DangerBrush}" 
                           FontSize="12" 
                           Margin="0,-10,0,10"
                           Visibility="Collapsed"/>

                <!-- Priority -->
                <Label Content="Priority" Style="{StaticResource ModernLabelStyle}" FontWeight="SemiBold"/>
                <ComboBox x:Name="PriorityComboBox" 
                          Style="{StaticResource ModernComboBoxStyle}"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="ðŸ”´ High Priority" Tag="High"/>
                    <ComboBoxItem Content="ðŸŸ¡ Medium Priority" Tag="Medium" IsSelected="True"/>
                    <ComboBoxItem Content="ðŸŸ¢ Low Priority" Tag="Low"/>
                </ComboBox>

                <!-- Category -->
                <Label Content="Category" Style="{StaticResource ModernLabelStyle}" FontWeight="SemiBold"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ComboBox x:Name="CategoryComboBox" 
                              Grid.Column="0"
                              Style="{StaticResource ModernComboBoxStyle}"
                              IsEditable="True"
                              Margin="0,0,10,0">
                        <ComboBoxItem Content="Work"/>
                        <ComboBoxItem Content="Personal"/>
                        <ComboBoxItem Content="Shopping"/>
                        <ComboBoxItem Content="Health"/>
                        <ComboBoxItem Content="Finance"/>
                        <ComboBoxItem Content="Learning"/>
                        <ComboBoxItem Content="Home"/>
                    </ComboBox>
                    
                    <Button Grid.Column="1" 
                            Content="ðŸ·ï¸" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="40"
                            ToolTip="Select from existing categories"/>
                </Grid>

                <!-- Additional Options -->
                <Expander Header="Additional Options" 
                          Foreground="{DynamicResource PrimaryTextBrush}"
                          Margin="0,10,0,0">
                    <StackPanel Margin="0,10,0,0">
                        <CheckBox x:Name="SetReminderCheckBox" 
                                  Content="Set reminder notification" 
                                  Style="{StaticResource ModernCheckBoxStyle}"
                                  Margin="0,5"/>
                        
                        <CheckBox x:Name="HighPriorityCheckBox" 
                                  Content="Mark as urgent" 
                                  Style="{StaticResource ModernCheckBoxStyle}"
                                  Margin="0,5"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0,1,0,0" 
                Padding="0,15,0,0" 
                Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Validation Summary -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock x:Name="ValidationSummary" 
                               Foreground="{DynamicResource DangerBrush}" 
                               FontSize="12" 
                               TextWrapping="Wrap"
                               Visibility="Collapsed"/>
                </StackPanel>

                <!-- Buttons -->
                <Button Grid.Column="1" 
                        Content="Cancel" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="CancelButton_Click"
                        MinWidth="80"
                        Margin="0,0,10,0"/>
                
                <Button Grid.Column="2" 
                        x:Name="SaveButton"
                        Content="Save Todo" 
                        Style="{StaticResource ModernButtonStyle}"
                        Click="SaveButton_Click"
                        MinWidth="100"/>
            </Grid>
        </Border>
    </Grid>
</Window>
